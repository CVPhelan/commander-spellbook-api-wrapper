{
  "name": "commander-spellbook",
  "version": "0.1.0",
  "description": "A wrapper for parsing the commander spellbook api.",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "prepublishOnly": "npm run typescript",
    "prebuild": "npm run pretty",
    "typescript": "tsc --declaration --project tsconfig.production.json",
    "build": "webpack",
    "build:watch": "webpack serve",
    "predemo": "npm run build",
    "demo": "http-server docs -p 3001",
    "demo:dev": "npm run demo & npm run build:watch",
    "lint": "eslint --ext ts .",
    "pretty": "prettier --write .",
    "posttest": "npm run lint",
    "test": "jest",
    "test:unit": "jest test/unit/",
    "test:integration": "jest test/integration/",
    "test:publishing": "jest test/publishing/",
    "test:all": "npm run lint && npm run test:unit && npm run test:integration && npm run test:publishing"
  },
  "keywords": [
    "commander spellbook",
    "commander",
    "edh",
    "magic the gathering",
    "mtg"
  ],
  "author": "blade <blade@crookedneighbor.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^26.0.13",
    "@types/superagent": "^4.1.10",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "check-ecmascript-version-compatibility": "^0.1.1",
    "css-loader": "^5.0.0",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "http-server": "^0.12.3",
    "jest": "^26.5.3",
    "mkdirp": "^1.0.4",
    "postcss": "^8.1.1",
    "postcss-loader": "^4.0.4",
    "prettier": "^2.1.1",
    "style-loader": "^2.0.0",
    "tailwindcss": "^1.9.1",
    "ts-jest": "^26.4.1",
    "ts-loader": "^8.0.5",
    "typescript": "^4.0.2",
    "webpack": "^5.1.0",
    "webpack-cli": "^4.0.0",
    "webpack-dev-server": "^3.11.0"
  },
  "dependencies": {
    "scryfall-client": "^0.18.5",
    "superagent": "^6.1.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "restoreMocks": true,
    "setupFilesAfterEnv": [
      "./test/helpers/setup.ts"
    ]
  }
}
